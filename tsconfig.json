{
  "compilerOptions": {
    "resolveJsonModule":true,
    "target": "es2017",
    "module": "CommonJS",                     
    "lib": ["ES6", "DOM"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "strict": true,                           
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": ["node_modules", "./dist","./src/TDD", "jest.config.js"]
}